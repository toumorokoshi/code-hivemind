{
  "name": "vscode-hivemind",
  "displayName": "VSCode Hivemind",
  "description": "Synchronize settings from another editor instance",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "hivemind.sync",
        "title": "Hivemind: Sync"
      }
    ],
    "configuration": {
      "title": "Hivemind",
      "properties": {
        "hivemind.sourcePath": {
          "type": "string",
          "default": "",
          "description": "Absolute path to the user data directory of the source editor (e.g. ~/.config/Code/User). If empty, sync will not run."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "npx @vscode/vsce package --allow-missing-repository"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "20.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vscode/test-electron": "^2.3.8",
    "@vscode/vsce": "^2.11.0",
    "eslint": "^8.56.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "jsonc-parser": "^3.2.0"
  }
}